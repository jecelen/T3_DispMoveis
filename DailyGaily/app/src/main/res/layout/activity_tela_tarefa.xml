<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tarefas"
    tools:context=".views.TelaTarefa">

    <Button
        android:id="@+id/btnAdcTarefa"
        android:layout_width="239dp"
        android:layout_height="57dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="174dp"
        android:backgroundTint="#F29999"
        android:textColor="@color/vinho"
        android:text="Adicionar Tarefa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listViewTarefas"
        android:layout_width="309dp"
        android:layout_height="488dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdcTarefa" />

</androidx.constraintlayout.widget.ConstraintLayout>