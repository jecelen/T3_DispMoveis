<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tela_habitos_alimentares"
    tools:context=".views.TelaAlimentacao">

    <Button
        android:id="@+id/btnAdcRefeicao"
        android:layout_width="239dp"
        android:layout_height="57dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="272dp"
        android:backgroundTint="@color/verdeClaro"
        android:text="Adicionar nova refeição"
        android:textColor="@color/vinho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtRefeicao1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="116dp"
        android:text="refeição1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdcRefeicao" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="224dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toEndOf="@+id/txtRefeicao1"
        app:layout_constraintTop_toBottomOf="@+id/btnAdcRefeicao"
        app:srcCompat="@drawable/map" />
</androidx.constraintlayout.widget.ConstraintLayout>