<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MapaEndereco">

  <fragment
      android:id="@+id/map"
      android:name="com.google.android.gms.maps.SupportMapFragment"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="30dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtEndMapa" />

  <Button
      android:id="@+id/btn_voltarEndereco"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:backgroundTint="#8AC8D0"
      android:elevation="4dp"
      android:text="Voltar"
      android:textColor="@color/white"
      android:textColorHighlight="#12121010"
      android:textSize="16sp"
      app:cornerRadius="8dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/edtEndMapa"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:backgroundTint="#8BC9D1"
      android:elevation="4dp"
      android:text="Editar ExercÃ­cio"
      android:textColor="@color/white"
      android:textSize="16sp"
      app:cornerRadius="8dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn_voltarEndereco" />

</androidx.constraintlayout.widget.ConstraintLayout>
