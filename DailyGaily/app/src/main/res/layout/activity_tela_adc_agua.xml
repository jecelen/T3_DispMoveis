<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tela_adc_agua"
    tools:context=".views.TelaAdcAgua">

    <TextView
        android:id="@+id/txtAdcAgua1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginTop="333dp"
        android:inputType="number"
        android:text="Ml's consumidos"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAdcAgua2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginTop="84dp"
        android:text="HorÃ¡rio"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAdcAgua1" />

    <EditText
        android:id="@+id/edtMlConsumido"
        android:layout_width="304dp"
        android:layout_height="47dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAdcAgua1" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="304dp"
        android:layout_height="47dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAdcAgua2" />

    <Button
        android:id="@+id/btnSalvarConsumo"
        android:layout_width="134dp"
        android:layout_height="48dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/azulClaro"
        android:text="Salvar"
        android:textColor="@color/vinho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTime" />

    <ImageButton
        android:id="@+id/imgVoltar"
        android:layout_width="65dp"
        android:layout_height="46dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_arrow_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>