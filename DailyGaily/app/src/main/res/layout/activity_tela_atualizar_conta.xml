<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".views.TelaAtualizarConta">

    <EditText
        android:id="@+id/edtNomeAtt"
        android:layout_width="332dp"
        android:layout_height="42dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="43dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtSenhaAtt"
        android:layout_width="332dp"
        android:layout_height="42dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="43dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNomeAtt" />

    <EditText
        android:id="@+id/edtEmailAtt"
        android:layout_width="332dp"
        android:layout_height="42dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="43dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtSenhaAtt" />

    <Button
        android:id="@+id/btnDeletarConta"
        android:layout_width="140dp"
        android:layout_height="52dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#E06C2B"
        android:text="Deletar conta"
        android:textColor="@color/vinho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEmailAtt" />

    <Button
        android:id="@+id/btnAtualizarConta"
        android:layout_width="140dp"
        android:layout_height="52dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="43dp"
        android:backgroundTint="@color/laranjaClaro"
        android:onClick="salvarUsuarioAtt"
        android:text="Atualizar"
        android:textColor="@color/vinho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDeletarConta"
        app:layout_constraintTop_toBottomOf="@+id/edtEmailAtt" />

    <TextView
        android:id="@+id/txtAtualizarConta1"
        android:layout_width="240dp"
        android:layout_height="33dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="135dp"
        android:text="Atualizar informações:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>