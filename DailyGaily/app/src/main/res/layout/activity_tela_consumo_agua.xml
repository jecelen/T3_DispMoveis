<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tela_consumo_agua"
    tools:context=".views.TelaConsumoAgua">

    <Button
        android:id="@+id/btnAdcAgua"
        android:layout_width="239dp"
        android:layout_height="57dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="86dp"
        android:backgroundTint="#ADDDE3"
        android:text="Adicionar água"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/imgVoltar"
        android:layout_width="60dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_arrow_foreground" />

    <TextView
        android:id="@+id/totalConsumido"
        android:layout_width="206dp"
        android:layout_height="62dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="8dp"
        android:background="#ADDDE3"
        android:backgroundTint="#ADDDE3"
        android:ellipsize="none"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:barrierMargin="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="56dp"
        android:text="Consumo total de água hoje:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdcAgua" />

</androidx.constraintlayout.widget.ConstraintLayout>