<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tela_adc_exercicios"
    tools:context=".views.TelaAdcExercicios">

    <EditText
        android:id="@+id/edtTipoExercicio"
        android:layout_width="309dp"
        android:layout_height="47dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="270dp"
        android:ems="10"
        android:hint="Tipo do exercício"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtTempoExercicio"
        android:layout_width="309dp"
        android:layout_height="45dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:hint="Tempo de exercício"
        android:inputType="time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTipoExercicio" />

    <TextView
        android:id="@+id/txtTelaExercicio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="32dp"
        android:text="Localização (opcional)"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTempoExercicio" />

    <EditText
        android:id="@+id/edtLatitude"
        android:layout_width="309dp"
        android:layout_height="45dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Latitude"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTelaExercicio1" />

    <EditText
        android:id="@+id/edtLongitude"
        android:layout_width="309dp"
        android:layout_height="45dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="Longitude"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLatitude" />

    <Button
        android:id="@+id/btnSalvarExercicio"
        android:layout_width="134dp"
        android:layout_height="58dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#AEDEE4"
        android:text="Salvar"
        android:textColor="@color/vinho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLongitude" />

</androidx.constraintlayout.widget.ConstraintLayout>